{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictNullChecks":false,
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./source/",
    "target": "es5",
    "lib": ["es2015","dom"],
    "types": ["node"]
  },
  "include": [
    "./src/**/*",
    "./widget/**/*",
    "./widget_sw/**/*",
    "./3D/**/*",
    "./definition/*",
    "./babylon/**/*"
  ]

}
